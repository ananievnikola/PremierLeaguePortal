@model IEnumerable<PremierLeaguePortal.Areas.Administration.Models.BlogViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "plp-actionlink plp-nopadding" })
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubHeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                Header image
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubHeader)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @if (item.HeaderImage != null)
                    {
                        <img class="img-fluid image-tumb" src="@Url.Content("~/" + item.HeaderImage.ImagePhysicalPath)" alt="Image" />
                    }
                </td>
                <td>
                    <div class="btn btn-warning">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "plp-actionlink" })
                    </div>
                    
                    <br />
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "plp-actionlink" })
                    <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "plp-actionlink" })
                </td>
            </tr>
        }

    </table>
</div>
