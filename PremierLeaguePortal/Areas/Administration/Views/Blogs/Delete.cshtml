@model PremierLeaguePortal.Models.Blog

@{
    ViewBag.Title = "Delete";
}

<h2>Blog</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="container-fluid">
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Header)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Header)
        </div>
    </div>
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.SubHeader)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.SubHeader)
        </div>
    </div>
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Content)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Content)
        </div>
    </div>
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Category)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Category)
        </div>
    </div>
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </div>
    </div>
    @if (Model.HeaderImage != null)
    {
        <div class="row plp-row-margin-b-t">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.HeaderImage)
            </div>
            <div class="col-md-10">
                <img src="@Url.Content("~/" + Model.HeaderImage.ImagePhysicalPath)" alt="Image" class="image-tumb-edit" />
            </div>
        </div>
    }
</div>
<div>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning btn-block btn-lg" /> 
            @plp_Helpers.GenerateActionLinkButton(Url, "Index", "Blogs", PremierLeaguePortal.Models.ELinkType.BACK, "Back to List")
        </div>
    }
</div>
