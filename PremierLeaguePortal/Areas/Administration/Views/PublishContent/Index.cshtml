@model IEnumerable<PremierLeaguePortal.Areas.Administration.Models.BlogViewModel>

@{
    ViewBag.Title = "Publish pannel";
}

<h2>Index</h2>
<div class="container-fluid">
    <div class="row plp-row-margin-b-t">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Header)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.SubHeader)
        </div>
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.Content)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.Category)
        </div>
        <div class="col-md-4">
            Image Preview
        </div>
        
    </div>
    @foreach (var item in Model)
    {
        <div class="row plp-row-margin-b-t">
            <div class="col-md-2">
                @Html.DisplayFor(model => item.Header)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => item.SubHeader)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => item.Content)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(model => item.Category)
            </div>
            <div class="col-md-4">
                @if (item.HeaderImage != null)
                {
                    <img class="img-fluid image-tumb" src="@Url.Content("~/" + item.HeaderImage.ImagePhysicalPath)" alt="Image" />
                }
            </div>
        </div>
        <div class="row plp-row-margin-b-t">
            @plp_Helpers.GenerateParamButton(Url, "Publish", "PublishContent", PremierLeaguePortal.Models.ELinkType.CREATE, "Publish", item.Id)
            @plp_Helpers.GenerateParamButton(Url, "Edit", "Blogs", PremierLeaguePortal.Models.ELinkType.EDIT, "Edit", item.Id)
        </div>
    }
</div>
