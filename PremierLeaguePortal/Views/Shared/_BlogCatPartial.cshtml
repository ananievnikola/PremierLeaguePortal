@model IEnumerable<PremierLeaguePortal.Models.HomeViewModel>

@{
    if (Model.Count() > 0)
    {
        ViewBag.Title = Model.First().ViewTitle;
    }

}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>
<div class="container-fluid">

    @{
        List<PremierLeaguePortal.Models.HomeViewModel> item = Model.ToList();
    }
    @for (int i = 0; i < item.Count; i++)
    {
        @plp_Helpers.BlogItemPreview(item[i], Url)
    }
</div>

